
<LinearLayout android:id="@+id/linearLayout1"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical">
	<TextView android:text="Lista de Contatos"
		android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge"
		android:id="@+id/textView1" android:gravity="center"
		android:layout_width="fill_parent">
	</TextView>
	<LinearLayout android:id="@+id/linearLayout3"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:orientation="vertical">
	</LinearLayout>
	<LinearLayout android:id="@+id/linearLayout2"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:orientation="vertical">
		<ListView android:id="@+verContatos/listaContatos"
			android:layout_height="wrap_content" android:layout_width="fill_parent" android:textFilterEnabled="true"></ListView>
	</LinearLayout>

</LinearLayout>
